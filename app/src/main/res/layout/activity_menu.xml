<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/toPDR"
        android:background="@drawable/btn_1"
        android:layout_width="340dp"
        android:layout_height="450dp"
        android:drawableTop="@drawable/resized_image_track"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:text="PDR实时探测"
        android:textSize="20pt"
        app:backgroundTint="@color/cadetblue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/collectData"
        android:background="@drawable/btn_1"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="520dp"
        android:layout_marginEnd="20dp"
        android:text="数据采集"
        android:textSize="10pt"
        app:backgroundTint="@color/darkcyan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/setting"
        android:background="@drawable/btn_1"
        android:layout_width="340dp"
        android:layout_height="80dp"
        android:drawablePadding="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="620dp"
        android:layout_marginEnd="20dp"
        android:text="设置"
        android:textSize="10pt"
        app:backgroundTint="@color/darkslategray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>